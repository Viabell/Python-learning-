#praktik
cowo_redflag= ["kevin", "rizky", "asep", 'dimas', 'putra']
warna = ["merah", "abu", 'hitam', 'ungu']

nama = input("Masukkan nama cowo: ")
warna_baju = input("Masukkan warna bajunya: ")


if nama in cowo_redflag :
    if warna_baju in warna:
        print(f'kalo namanya {nama} sama bajunya warna {warna_baju} Maroon flag')
    else:
        print(f'kalo namanya {nama} tapi bajunya {warna_baju} berarti Red flag')
else:
    print("kalo nama sama bajunya gaada di list berarti dia Green flag")
